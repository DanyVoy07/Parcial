@model IEnumerable<Parcial.Models.Curso>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">

<!-- Hero Section -->
<div class="bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="display-4">Bienvenido a Cursos</h1>
        <p class="lead">Explora nuestros cursos y mejora tus habilidades.</p>
        <a class="btn btn-light btn-lg mt-3" href="@Url.Action("Index", "Cursos")" role="button">Ver Cursos</a>
    </div>
</div>

<!-- Main Content -->
<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Nuestros Cursos Destacados</h2>
        <p class="text-muted">Selecciona un curso y empieza a aprender hoy mismo.</p>
    </div>
    <div class="row">
        @foreach (var curso in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <img src="path/to/your/image.jpg" class="card-img-top" alt="@curso.Nombre">
                    <div class="card-body">
                        <h5 class="card-title">@curso.Nombre</h5>
                        <p class="card-text">@curso.Descripcion</p>
                        <a href="@Url.Action("Details", "Cursos", new { id = curso.ID })" class="btn btn-primary">Más información</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Footer -->
<footer class="bg-light text-center text-lg-start mt-5">
    <div class="container p-4">
        <div class="row">
            <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                <h5 class="text-uppercase">Cursos</h5>
                <p>
                    Aprende sobre <a href="https://learn.microsoft.com/aspnet/core" target="_blank" class="text-decoration-none">cómo construir aplicaciones web con ASP.NET Core</a>.
                </p>
            </div>
            <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                <h5 class="text-uppercase">Enlaces Útiles</h5>
                <ul class="list-unstyled mb-0">
                    <li>
                        <a href="@Url.Action("Index", "Cursos")" class="text-dark">Ver Cursos</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Home")" class="text-dark">Contacto</a>
                    </li>
                    <li>
                        <a href="@Url.Action("About", "Home")" class="text-dark">Sobre Nosotros</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                <h5 class="text-uppercase">Redes Sociales</h5>
                <ul class="list-unstyled mb-0">
                    <li>
                        <a href="#" class="text-dark"><i class="bi bi-facebook"></i> Facebook</a>
                    </li>
                    <li>
                        <a href="#" class="text-dark"><i class="bi bi-twitter"></i> Twitter</a>
                    </li>
                    <li>
                        <a href="#" class="text-dark"><i class="bi bi-instagram"></i> Instagram</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="text-center p-3 bg-primary text-white">
        &copy; 2024 Cursos. Todos los derechos reservados.
    </div>
</footer>

<!-- Bootstrap JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .container {
        max-width: 1200px;
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .text-primary {
        color: #007bff !important;
    }
</style>
